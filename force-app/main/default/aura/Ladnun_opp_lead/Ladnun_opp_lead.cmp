<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId" access="global" controller="my_opp_lead" >
    <aura:attribute name = "lead" type="lead"/>
    <aura:attribute name = "recordId" type="String"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:iteration var="a" items="{!v.lead}">
 		<lightning:card variant="Narrow" title="{!a.name}" iconName="standard:lead" footer="Card Footer">
       		<p class="slds-p-horizontal_small"> {!a.Email}</p>
    	</lightning:card>
	</aura:iteration>
    
	
</aura:component>